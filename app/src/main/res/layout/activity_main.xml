<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstpage"
    android:gravity="center"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="670dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="41dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="139dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logofirst"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/logofront" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:text="@string/emergency_ambulance_booking_app"
            android:textColor="#0B0A0A"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/loginlogo"
            android:fontFamily="@font/architects_daughter"

            android:text="@string/login"
            android:textColor="@color/black"

            android:textStyle="bold" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/registerlogo"
            android:fontFamily="@font/architects_daughter"
            android:text="@string/registration"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <View
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:text="@string/want_to_skip"
            android:textColor="@color/black"
            android:textStyle="bold" />



    </LinearLayout>


</RelativeLayout>