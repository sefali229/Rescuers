<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstpage"
    android:gravity="center"
    tools:context=".RegistrationPage1">

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="670dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="41dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:layout_gravity="center"

            android:layout_marginBottom="40dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/hospitallogo"
            android:fontFamily="@font/architects_daughter"
            android:foregroundGravity="center"
            android:gravity="center"
            android:shadowColor="#8795EC"
            android:shadowRadius="6"
            android:text="Are You a Hospital?"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            app:rippleColor="#FFFFFF" />

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="129dp"
            android:layout_gravity="center"

            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/userlogo"
            android:fontFamily="@font/architects_daughter"
            android:foregroundGravity="center"
            android:gravity="center"
            android:shadowColor="#8795EC"
            android:shadowRadius="6"
            android:text="Are You a Patient?"
            android:textColor="#0B0A0A"
            android:textStyle="bold"
            app:rippleColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>